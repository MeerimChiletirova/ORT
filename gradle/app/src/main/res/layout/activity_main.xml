<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:src="@drawable/main_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_test_btn"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="56dp"
        android:text="@string/start_test_btn"
        android:textSize="20sp"
        android:background="@color/main_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:onClick="startTest"/>

    <Button
        android:id="@+id/admin_panel_btn"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/admin_panel_btn"
        android:textSize="20sp"
        android:background="@color/main_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_test_btn"
        android:onClick="adminPanel"/>

    <Button
        android:id="@+id/exit_btn"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:text="@string/exit_btn"
        android:textSize="20sp"
        android:background="@color/main_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin_panel_btn"
        android:onClick="exitApp"/>
</androidx.constraintlayout.widget.ConstraintLayout>