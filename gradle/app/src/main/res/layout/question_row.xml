<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/questionLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/main_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/question_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="1"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/question_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="Вопрос"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/question_id_txt"
                app:layout_constraintTop_toTopOf="@+id/question_id_txt" />

            <TextView
                android:id="@+id/question_correct_option_txt"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="0sp"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="@+id/question_name_txt" />

            <TextView
                android:id="@+id/question_option_1_txt"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="0sp"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="@+id/question_name_txt" />

            <TextView
                android:id="@+id/question_option_2_txt"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="0sp"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="@+id/question_name_txt" />

            <TextView
                android:id="@+id/question_option_3_txt"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="0sp"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="@+id/question_name_txt" />

            <TextView
                android:id="@+id/question_option_4_txt"
                android:layout_width="0sp"
                android:layout_height="0sp"
                android:textSize="0sp"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="@+id/question_name_txt" />

            <TextView
                android:id="@+id/question_option_5_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="215sp"
                android:text="1"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/question_name_txt"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>