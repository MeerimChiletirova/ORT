<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Введите вопрос"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/correct_option_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Введите правильный ответ"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_input" />

    <EditText
        android:id="@+id/option_1_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Введите ответ 1"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_option_input" />

    <EditText
        android:id="@+id/option_2_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Введите ответ 2"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_1_input" />

    <EditText
        android:id="@+id/option_3_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Введите ответ 3"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_2_input" />

    <EditText
        android:id="@+id/option_4_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/rounded_corner"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Введите ответ 4"
        android:textColorHint="@color/white"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_3_input" />

    <EditText
        android:id="@+id/option_5_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="Введите балл за ответ"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        android:paddingStart="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_4_input" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="30dp"
        android:text="Добавить"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option_5_input" />
</androidx.constraintlayout.widget.ConstraintLayout>